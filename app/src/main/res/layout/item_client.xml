<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_client"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/phone" />

        <TableLayout
            android:id="@+id/page3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginLeft="20dp"
            >
            <TableRow>

                <TextView
                    android:id="@+id/item_client_device_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.6"
                    android:text="Device Name"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/item_client_device_model"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:text="Device Model"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/item_client_device_ready_str"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="0dp"
                    android:text="준비됨"
                    android:textColor="#3FA60F"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/item_client_device_ready_image"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/iconfinder"
                    android:padding="10dip"
                    android:textSize="15dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"
        android:background="#E8DBDB" />
</LinearLayout>