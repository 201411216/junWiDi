<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="220dp"
    android:id="@+id/send_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/btn_dialog"
        >

        <TextView
            android:id="@+id/send_dialog_txt_file_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/notoblack"
            android:textColor="#4B4747"
            android:textSize="15dp"
            android:text="파일 이름"/>

        <ProgressBar
            android:id="@+id/send_dialog_progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/myprogressbar"
            android:max="100"
            android:progress="50"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"

            android:layout_height="10dp" />


        <TextView
            android:id="@+id/send_dialog_progress_percent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notolight"
            android:textColor="#4B4747"
            android:text="0 / 100"/>

        <TextView
            android:id="@+id/send_dialog_txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notoregular"
            android:gravity="center"
            android:text="파일을 전송하시겠습니까?"
            android:textColor="#4B4747"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/send_dialog_btn_cancel"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_dialog"
            android:fontFamily="@font/notoregular"
            android:text="취소"
            android:textColor="#4095FB"
            android:textSize="16dp" />

        <Button
            android:id="@+id/send_dialog_btn_ok"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_dialog"
            android:fontFamily="@font/notoblack"
            android:text="전송"
            android:textColor="#4095FB"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>