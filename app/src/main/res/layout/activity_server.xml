<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Run as server"
            android:fontFamily="@font/notoblack"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notoregular"
                android:text="Device Name : "
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notoregular"
                android:id="@+id/server_txt_my_device_name"
                android:text="-"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notoregular"
                android:text="Device Address : "
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notoregular"
                android:id="@+id/server_txt_my_device_address"
                android:text="-"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notoblack"
                android:text="Device State : "
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notoregular"
                android:id="@+id/server_txt_my_device_state"
                android:text="-"
                android:textSize="15dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notoblack"
                android:text="Video Path : "
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoregular"
                android:id="@+id/server_txt_video_path"
                android:text="-"
                android:textSize="15dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/server_btn_server_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoblack"
            android:layout_weight="1"
            android:text="그룹 -"/>

        <Button
            android:id="@+id/server_btn_refresh_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoblack"
            android:layout_weight="1"
            android:text="새로고침"/>

        <Button
            android:id="@+id/server_btn_file_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoblack"
            android:layout_weight="1"
            android:text="비디오 -"/>

        <Button
            android:id="@+id/server_btn_file_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoblack"
            android:layout_weight="1"
            android:text="전송"/>



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginBottom="0"
        android:layout_gravity="center"
        android:fontFamily="@font/notoblack"
        android:text="현재 진행사항 "
        />
    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:max="100"
        android:progress="0" />

    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/server_list_client">
    </ListView>



</LinearLayout>