<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Gray shadow. -->
<item
    android:left="2dp"
    android:top="3dp">
    <shape>
        <solid android:color="#111111" />
        <corners android:radius="15dp" />
    </shape>
</item>

<!-- White foreground.  -->
<item
    android:bottom="3dp"
    android:right="2dp">
    <shape>
        <solid android:color="#7289D9" />
        <corners android:radius="15dp" />
    </shape>
</item>

</layer-list>